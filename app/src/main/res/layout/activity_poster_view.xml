<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/poster_view_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:orientation="vertical"
    android:transitionGroup="false"
    android:transitionName="poster_view_background">

    <ImageView
        android:id="@+id/poster_view_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/background_poster_view"
        android:minHeight="@dimen/poster_view_min_height_image"
        android:transitionName="poster_view"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@null"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/poster_view_title_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/poster_view_title_bar"
            android:background="@color/text_secondary_light"
            android:orientation="vertical">

            <TextView
                android:id="@+id/poster_view_artist"
                android:layout_width="match_parent"
                android:layout_height="@dimen/poster_view_title_bar_artist_height"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="88dp"
                android:paddingTop="16dp"
                android:text="artist"/>

            <TextView
                android:id="@+id/poster_view_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/poster_view_title_bar_title_height"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="88dp"
                android:paddingTop="8dp"
                android:text="title will be here!"/>

        </LinearLayout>

        <TextView
            android:id="@+id/poster_view_desciption"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="88dp"
            android:paddingTop="16dp"
            android:text="Someme fneaiufn  reaioh ofadnbf  ofashf o dfsoahf ohsga ousfhg ofi sdfaho "
            android:layout_below="@id/poster_view_title_bar"/>
    </RelativeLayout>

</LinearLayout>










